#!/usr/bin/env bash
set -o errexit

main() {
  cd "$(dirname "$(dirname "${BASH_SOURCE[0]}")")"

  mkdir -p tmp/

  if [[ -n "${GCE_ACCOUNT_FILE_B64_BZ2}" ]]; then
    echo "${GCE_ACCOUNT_FILE_B64_BZ2}" |
      base64 -d |
      bunzip2 >tmp/gce.json
  fi

  if [[ "${GCE_ACCOUNT_ID}" ]]; then
    gcloud config set account "${GCE_ACCOUNT_ID}"
    gcloud auth login --brief
  fi

  if [[ ! "$(packer version 2>/dev/null)" =~ Packer\ v1.1.0 ]]; then
    make install-packer
  fi

  if ! bats --version &>/dev/null; then
    make install-bats
  fi
}

main "${@}"
